#!/bin/ksh -l
#SBATCH --qos=normal
#SBATCH --mem=200000
#SBATCH --ntasks=16
#SBATCH --ntasks-per-core=1
#SBATCH --time=10

cd $SCRATCH/images/DWR

rm vcs_20CR2c_1903_scatter+contour.mp4
# Get rid of empty images - they make ffmpeg stop processing
#  These usually come from disc problems in the creation step.
find vcs_20CR2c_1903_scatter+contour/*.png -type f -empty -delete

ffmpeg -r 24 -pattern_type glob -i vcs_20CR2c_1903_scatter+contour/\*.png -c:v libx264 -threads 16 -preset slow -tune animation -profile:v high -level 4.2 -pix_fmt yuv420p -crf 25 -c:a copy vcs_20CR2c_1903_scatter+contour.mp4
